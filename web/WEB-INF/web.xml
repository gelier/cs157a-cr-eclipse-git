<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>webapp.Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mainpage</servlet-name>
        <servlet-class>webapp.Mainpage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainpage</servlet-name>
        <url-pattern>/mainpage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>webapp.Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>displayRecipe</servlet-name>
        <servlet-class>webapp.DisplayRecipe</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>displayRecipe</servlet-name>
        <url-pattern>/displayRecipe</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addrecipe</servlet-name>
        <servlet-class>webapp.AddRecipe</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addrecipe</servlet-name>
        <url-pattern>/addrecipe</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>follower</servlet-name>
        <servlet-class>webapp.Follower</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>follower</servlet-name>
        <url-pattern>/follower</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myrecipe</servlet-name>
        <servlet-class>webapp.MyRecipe</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>myrecipe</servlet-name>
        <url-pattern>/myrecipe</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myfavorite</servlet-name>
        <servlet-class>webapp.MyFavorite</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>myfavorite</servlet-name>
        <url-pattern>/myfavorite</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>editrecipe</servlet-name>
        <servlet-class>webapp.EditRecipe</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>editrecipe</servlet-name>
        <url-pattern>/editrecipe</url-pattern>
    </servlet-mapping>








</web-app>